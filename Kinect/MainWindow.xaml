<Window x:Class="Kinect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kinect"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" HorizontalAlignment="Center" WindowStartupLocation="CenterScreen">



    <Grid>
        <ItemsControl Name="ItemsControl" Margin="0,73,0,0">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Click="ButtonBase_OnClick" CommandParameter="{Binding Value}" FontSize="22" Margin="20,0,20,20" Content="{Binding Name}" Width="200" Height="100" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel></WrapPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <Label FontSize="40" HorizontalContentAlignment="Center" Content="Select  the movie genre" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="497"/>
    </Grid>
</Window>
